<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marksheet_table_course1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:padding="10dp"
    android:background="@color/pastelPurple">
    <TableRow
        android:id="@+id/course1_absence"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_absentDays"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Days of Absence "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/attendanceValue"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="4"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:id="@+id/quiz1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_quiz1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Quiz 1"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_quiz1_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="14/15"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:id="@+id/quiz2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_quiz2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Quiz 2"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_quiz2_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="10/20"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:id="@+id/quiz3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_quiz3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Quiz 3"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_quiz3_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="6/10"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/quiz4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_quiz4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Quiz 4"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_quiz4_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="10/10"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_midterm"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Mid"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_mid_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="16/20"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/assignment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_assignment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Assignment"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_assignment_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="5/5"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/lab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_lab"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Lab"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_lab_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="18/20"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/finals"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course1_finals"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Finals"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/course1_finals_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="30/35"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple">
        <TextView
            android:id="@+id/course1_total_display"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Total"
            android:textSize="20sp"
            android:textColor="@color/blackTextColor"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/course1_total_obtained_mark"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="87/100"
            android:textSize="20sp"
            android:textColor="@color/blackTextColor"/>
    </TableRow>
</TableLayout>